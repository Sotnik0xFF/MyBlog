@{
    ViewData["Title"] = "Регистрация пользователя";
}

@model MyBlog.Application.Models.LoginRequest

<h1>@ViewData["Title"]</h1>
<form method="post" autocomplete="off" asp-controller="Account" asp-action="Login" name="">
    <div class="row mb-3">
        <label for="inputEmail" class="col-sm-2 col-form-label">E-Mail: </label>
        <div class="col-sm-10">
            <input type="text" asp-for="Email" class="form-control" id="inputEmail">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword" class="col-sm-2 col-form-label">Пароль: </label>
        <div class="col-sm-10">
            <input type="password" asp-for="Password" class="form-control" id="inputPassword">
        </div>
    </div>
    <button type="submit" class="mb-3 btn btn-primary bg-gradient">Войти</button>

    <div class="mb-3 text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-text">
        Еще нет аккаунта? <a asp-action="Register" asp-controller="Account">Зарегистрируйтесь</a>
    </div>
</form>