@{
    ViewData["Title"] = "Все пользователи";
}

@using MyBlog.Application.Models

@model IEnumerable<UserViewModel>
@{
    <h1>@ViewData["Title"]</h1>

    @foreach (UserViewModel user in Model)
    {
        <div class="card mb-2" style="width: 30rem;">
            <div class="card-body">
                <a class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="Details/@user.Id">
                    <h5 class="card-title">@user.FirstName @user.LastName</h5>
                </a>
                <div>
                    @foreach (RoleViewModel role in user.Roles)
                    {
                        <span class="badge bg-info mb-2">@role.Name</span>
                    }
                </div>
                <p class="card-text">@user.Email</p>
                <a href="Edit/@user.Id" class="card-link">Редактировать</a>
                <a href="Delete/@user.Id" class="card-link">Удалить</a>
            </div>
        </div>
    }
}
