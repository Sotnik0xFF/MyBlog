@using MyBlog.Application.Models
@{
    ViewData["Title"] = "Редактирование пользователя";
}

@model MyBlog.WebApp.Models.EditUserViewModel

@{
    <h1>@ViewData["Title"]</h1>
    <form method="post" autocomplete="off" asp-controller="Account" asp-action="Edit">
        @foreach (string roleName in Model.AllRoleNames)
        {
            <input type="checkbox" name="UserRoleNames" value="@roleName"
            @(Model.UserRoleNames.Contains(roleName) ? "checked=\"checked\"" : "") />

            @roleName <br />
        }

        <div class="row mb-3">
            <label for="inputFirstName" class="col-sm-2 col-form-label">Имя: </label>
            <div class="col-sm-10">
                <input type="text" asp-for="FirstName" class="form-control" id="inputFirstName">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputLastName" class="col-sm-2 col-form-label">Фамилия: </label>
            <div class="col-sm-10">
                <input type="text" asp-for="LastName" class="form-control" id="inputLastName">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputNewPassword" class="col-sm-2 col-form-label">Новый пароль: </label>
            <div class="col-sm-10">
                <input type="password" asp-for="NewPassword" class="form-control" id="inputNewPassword">
            </div>
        </div>
        <div class="mb-3 text-danger" asp-validation-summary="All"></div>
        <button type="submit" class="mb-3 btn btn-primary bg-gradient">Сохранить</button>
    </form>
}
